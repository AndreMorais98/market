extends layout

block content

    div(class="container"  )
      div(class="main-form")
        h1 Create your NFT collection
        h3 Step 1
        p Firstly, you are going to give a name for you collection and a name for your token that will be sent directly to the Smart Contract. Afterwards, select the type of product that you want to craft
        div(class='nft-form')
          form(action="/step1" method="POST")
            div(class="form-group")
              label(for="metadataName") Collection Name:
              input(id='metadataName' type='text' name='name' required class="form-control")

            div(class="form-group")
              label(for="metadataToken") Abreviation Token:
              input(id='metadataToken' type='text' name='token' required class="form-control")

            div(class="form-group")
              label(for="exampleFormControlSelect1") Type of Product:
              select(class="form-control" id="exampleFormControlSelect1" name="product" required data-select)
                option Watch
                option Jewellery
                option Clothes
                option Shoes
                option Bags
            
            div(class="form-group d-none select-clothes" data-show-clothes data-show)
              label(for="exampleFormControlSelect2") Down or Upper Body?:
              select(class="form-control" id="exampleFormControlSelect2" name="clothes" required data-select-clothes disabled)
                option Shirt/Coat
                option Trousers/Shorts
            
            div(class="btn-upload")
              button(type='submit' class='btn btn-primary') Continue


    script.
    script(src="/javascripts/select.js")
